{
  "name": "nextjs-docker-template",
  "version": "1.0.0",
  "description": "Production-ready Next.js Docker template with security and performance optimizations",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:build": "docker build -t nextjs-app:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t nextjs-app:dev .",
    "docker:run": "docker run -p 3000:3000 nextjs-app:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "next": "14.2.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "cross-spawn": "7.0.5",
    "eslint": "^8.56.0",
    "eslint-config-next": "^16.1.0",
    "glob": "10.5.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
